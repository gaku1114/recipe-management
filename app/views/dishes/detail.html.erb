<div class="detail-wrapper">
  <div class="detail-top">
    <div class="detail-dish-name"><%= @dish.dish_name %></div>
    <div class="detail-url">
      <%= link_to 'レシピサイトを見る', @dish.url, class:"show-dish-url", target: :_blank, rel: "noopener noreferrer"%>
    </div>
  </div>
  <div class="detail-main">
    <div class="index-materials">
    <% if @materials.exists? %>
      <div class="material-header">
        材料
      </div>
      <% @materials.each do |material| %>
        <ul>
          <div class="material-border "><li class="index-material"><%= material.name %></li></div>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>